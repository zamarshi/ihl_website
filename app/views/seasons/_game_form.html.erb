
<div class="col-xs-12">
  <%# adding the `remote: true` option makes the form submit with jQuery
      using the jquery_ujs library inlucded in the manifest file by
      default and it will prevent default submission for the form as well
      so it's going to use preventDefault() under the hood %>
  <%= form_for [@game], remote: true do |f| %>
    <div class="form-group">
     <div> <%= f.datetime_select :date,  :minute_step => 15, :ampm => true %> </div>
      <div> <%= f.association :home_team, collection: Team.order(:name)%> </div>
      <div> <%= f.association :away_team, collection: Team.order(:name)%> </div>
    </div>
    <%= f.submit class: "btn btn-default" %>
  <% end %>
  <hr/>
</div>
